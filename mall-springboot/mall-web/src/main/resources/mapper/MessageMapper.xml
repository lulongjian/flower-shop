<?xml version="1.0" encoding="UTF-8" ?>
      <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
      <mapper namespace="com.example.mall.dao.MessageMapper" >


    <resultMap id="BaseResultMap" type="com.example.mall.domain.MessageDO">
        <id column="id" property="id" />
        <result column="user_id" property="userId"></result>
        <result column="product_id" property="productId"></result>
        <result column="text" property="text"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>

    <resultMap id="VOBaseResultMap" type="com.example.mall.domain.vo.MessageVO">
        <id column="id" property="id" />
        <result column="user_id" property="userId"></result>
        <result column="product_id" property="productId"></result>
        <result column="product_title" property="productTitle"></result>
        <result column="text" property="text"></result>
        <result column="create_time" property="createTime"></result>
        <result column="name" property="name"></result>
    </resultMap>

    <select id="findMessageByProductId" parameterType="int" resultMap="VOBaseResultMap">
        select m.*,
          u.name
        from message m join sys_user u on (m.user_id = u.id)
        where m.product_id = #{productId}
        order by m.create_time desc
    </select>

    <select id="getMessageList" parameterType="string" resultMap="VOBaseResultMap">
        select m.*,
          u.name,
          p.title as product_title
        from message m join sys_user u on (m.user_id = u.id) join product p on (p.id = m.product_id)
        <trim prefix="where" prefixOverrides="and|or">
            <if test="text != null and text !=''">
                and m.text like "%"#{text}"%"
            </if>
        </trim>
        order by m.create_time desc
    </select>

    <insert id="addMessage">
        insert into message (user_id, product_id, text, create_time) values(#{userId}, #{productId}, #{text}, #{date})
    </insert>
</mapper>