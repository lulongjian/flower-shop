<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mall.dao.NoticeDOMapper">
    <resultMap id="BaseResultMap" type="com.example.mall.domain.NoticeDO">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="title" jdbcType="VARCHAR" property="title"/>
<!--        <result column="type" jdbcType="INTEGER" property="type"/>-->
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="content" jdbcType="LONGVARCHAR" property="content"/>
    </resultMap>

    <select id="getNoticeList" parameterType="com.example.mall.domain.form.NoticeForm" resultMap="BaseResultMap">
        select *
        from notice
        <trim prefix="where" prefixOverrides="and|or">
            <if test="title != null and title !=''">
                and title like "%"#{title}"%"
            </if>
            <if test="content != null and content !=''">
                and content like "%"#{content}"%"
            </if>
        </trim>
        order by create_time desc
    </select>
</mapper>