<?xml version="1.0" encoding="UTF-8" ?>
      <!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
      <mapper namespace="com.example.mall.dao.RecommendMapper" >


    <resultMap id="BaseResultMap" type="com.example.mall.domain.RecommendDO">
        <id column="id" property="id" />
        <result column="sort" property="sort"></result>
        <result column="re_ime" property="reTime"></result>
        <result column="product_id" property="productId"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>

    <resultMap id="VOResultMap" type="com.example.mall.domain.vo.RecommendVO">
        <id column="id" property="id"/>
        <result column="sort" property="sort"></result>
        <result column="re_time" property="reTime"></result>
        <result column="title" property="title"></result>
        <result column="product_id" property="productId"></result>
        <result column="create_time" property="createTime"></result>
        <result column="permission" property="permission"></result>
        <result column="title" property="title"></result>
        <result column="des" property="des"></result>
        <result column="number" property="number"></result>
        <result column="sally_num" property="sallyNum"></result>
        <result column="user_id" property="userId"></result>
        <result column="img_url" property="imgUrl"></result>
        <result column="price" property="price"></result>
        <result column="old_price" property="oldPrice"></result>
        <result column="collect_num" property="collectNum"></result>
        <result column="create_time" property="createTime"></result>
    </resultMap>


    <select id="getRecommendList" parameterType="com.example.mall.domain.form.RecommendForm" resultMap="VOResultMap">
        SELECT
        r.*,
        p.title,
        p.*,
        p.sort as type,
        r.id as id
        FROM
        recommend r inner join product p on (r.product_id = p.id and p.permission = '1')
        <trim prefix="where" prefixOverrides="and|or">

            <if test="reTime != null and reTime != ''">
                and date(r.re_time) = #{reTime}
            </if>
        </trim>
        ORDER BY r.sort
    </select>
</mapper>